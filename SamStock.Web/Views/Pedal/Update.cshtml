@model dynamic
@{
    Layout = "../Shared/_Layout.cshtml";
}
@section head
{
    <link href="@Url.Content("~/Content/styles/PedalUpdate.css")" rel="stylesheet" type="text/css" />
}
@section navigation
{
    @Html.Partial("_Navigation")
}
@section body
{
    <h1>Edit</h1>
    @using (Html.BeginForm("Update", "Pedal"))
    {
        @Html.Hidden("id",(int)Model.Id)
        @Html.Label("Name")
        <input value="@Model.Name" name="name" type="text" title="At least 1 character" pattern=".+" />
        <br />
        @Html.Label("Price")
        <input value="@Model.Price.ToString("0.00")" name="price" type="text" title="A valid price" pattern="[0-9]+[,[0-9]+]{0,1}" />
        <br />
        @Html.Label("Margin")
        <input value="@Model.Margin.ToString("0.00")" name="margin" type="text" title="A valid price" pattern="[0-9]+[,[0-9]+]{0,1}" />
        <br />
        <button>Update</button>
    }
    <br />
    <a class="button navigation" href="@Url.Action("Details","Pedal",new {Model.Id})">Back</a>
}