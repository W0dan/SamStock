@model SamStock.Web.Models.StockViewModel
@{
    Layout = "../Shared/_Layout.cshtml";
}
@section head
{
    <link href="../../Content/styles/Stock.css" rel="stylesheet" type="text/css" />
}
@section navigation
{
    @Html.Partial("_Navigation")
}
@section body
{
    <h2>
        Stock</h2>
    <table>
        <tr>
            <th id="StocknrHeader">
                Stocknr
            </th>
            <th id="NaamHeader">
                Naam
            </th>
            <th id="PrijsHeader">
                Prijs
            </th>
            <th id="HoeveelheidHeader">
                Hoeveelheid
            </th>
            <th id="MinimumStockHeader">
                Minimum stock
            </th>
            <th id="LeverancierHeader">
                Leverancier
            </th>
            <th id="OpmerkingenHeader">
                Opmerkingen
            </th>
            <th id="Toevoegenheader">
            </th>
        </tr>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>@item.Stocknr
                </td>
                <td>@item.Naam
                </td>
                <td>@item.Prijs
                </td>
                <td>@item.Hoeveelheid
                </td>
                <td>@item.MinimumStock
                </td>
                <td>@item.LeverancierNaam
                </td>
                <td>@item.Opmerkingen
                </td>
                <td>
                </td>
            </tr>
        }
        <tr>
            @using (Html.BeginForm("ComponentToevoegen", "Stock"))
            {
                <td>
                    @Html.TextBoxFor(x => x.NewItem.Stocknr)
                </td>
                <td>
                    @Html.TextBoxFor(x => x.NewItem.Naam)
                </td>
                <td>
                    @Html.TextBoxFor(x => x.NewItem.Prijs)
                </td>
                <td>
                    @Html.TextBoxFor(x => x.NewItem.Hoeveelheid)
                </td>
                <td>
                    @Html.TextBoxFor(x => x.NewItem.MinimumStock)
                </td>
                <td>
                    @Html.DropDownListFor(x => x.NewItem.LeverancierId, Model.Leveranciers.Select(x => new SelectListItem {Text = x.Naam, Value = x.Id.ToString("0")}))
                </td>
                <td>
                    @Html.TextBoxFor(x => x.NewItem.Opmerkingen)
                </td>
                <td>
                    <button id="toevoegenButton">
                        Toevoegen</button>
                </td>
            }
        </tr>
    </table>
}
