<Window x:Class="SAMStock.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:SAMStock.wpf.Properties"
        xmlns:userControls="clr-namespace:SAMStock.wpf.UserControls"
        Title="SAMStock" Closing="MainWindow_OnClosing">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<TabItem Header="Components">
				<userControls:ComponentsTab x:Name="ComponentsTabControl"></userControls:ComponentsTab>
			</TabItem>
			<TabItem Header="Pedals">
				<Grid></Grid>
			</TabItem>
			<TabItem Header="Suppliers">
				<Grid></Grid>
			</TabItem>
			<TabItem Header="Settings">
				<userControls:SettingsTab x:Name="SettingsTabControl"></userControls:SettingsTab>
			</TabItem>
		</TabControl>
		<StatusBar Grid.Row="1">
			<StatusBarItem>
				<TextBlock Name="StatusTextBlock" x:FieldModifier="private"></TextBlock>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>
