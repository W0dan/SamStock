<Window x:Class="SAMStock.wpf.Dialogs.ComponentDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComponentDeleteDialog">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
	        <RowDefinition Height="*" />
	        <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
		<Label Name="Warning" />
	    <Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Label Content="Force deletion even if still in use by pedals" />
		    <CheckBox Name="CascadeCheckBox" HorizontalAlignment="Center" Grid.Column="1" />
	    </Grid>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Button HorizontalAlignment="Right" Name="OkButton" Click="OkButton_OnClick">Ok</Button>
			<Button Grid.Column="1" Name="CloseButton" HorizontalAlignment="Right" Click="CloseButton_OnClick">Cancel</Button>
		</Grid>
    </Grid>
</Window>
