<Window x:Class="WPF.UserControls.Pedals.PedalComponentUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PedalComponentUpdateDialog">
	<Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
	        <RowDefinition Height="*" />
	        <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Label Grid.Row="0">How many of this component are in this pedal?</Label>
		<TextBox Grid.Row="0" Grid.Column="1" Name="AmountTextBox"></TextBox>
		<Button Name="UpdateButton" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Click="UpdateButton_OnClick">Update</Button>
    </Grid>
</Window>
