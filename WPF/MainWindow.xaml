<base:BaseWindow x:Class="SAMStock.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:SAMStock.wpf.UserControls"
        xmlns:base="clr-namespace:SAMStock.wpf.Dialogs.Base"
        Title="SAMStock">
    <Grid>
		<TabControl HorizontalAlignment="Stretch" Name="Tabs" VerticalAlignment="Stretch">
			<TabItem Header="Components" Name="ComponentsTabItem">
				<userControls:ComponentsTab x:Name="ComponentsTab" />
			</TabItem>
			<TabItem Header="Pedals" Name="PedalsTabItem">
				<userControls:PedalsTab x:Name="PedalsTab" />
			</TabItem>
			<TabItem Header="Settings" Name="SettingsTabItem">
				<userControls:SettingsTab x:Name="SettingsTab" />
			</TabItem>
		</TabControl>
	</Grid>
</base:BaseWindow>
